# Database Configuration (Production - AWS RDS)
DATABASE_URL=postgresql://planner_user:your_password@your-rds-endpoint.amazonaws.com:5432/planner_db
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_USERNAME=planner_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=planner_db

# TypeORM
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false

# Server Configuration
PORT=4000
NODE_ENV=production

# Firebase Configuration
FIREBASE_PROJECT_ID=voyage-1b716
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_X509_CERT_URL=your_cert_url

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# AI Service URL
AI_SERVICE_URL=http://ai-service:3001

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Apple In-App Purchase
APPLE_SHARED_SECRET=your_apple_shared_secret_here

# CORS
CORS_ORIGIN=https://your-app-domain.com
FRONTEND_URL=https://your-app-domain.com

# Logging
LOG_LEVEL=info
